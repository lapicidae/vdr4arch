# Maintainer: Manuel Reimer <manuel.reimer@gmx.de>
pkgname=t2scan
pkgver=0.7
pkgrel=2
pkgdesc="a small channel scan tool which generates DVB-T/T2 channels.conf files"
url="https://github.com/mighty-p/t2scan"
arch=('x86_64' 'i686' 'arm' 'armv6h' 'armv7h' 'aarch64')
license=('GPL2')
depends=('gcc-libs' 'glibc')
#gcc-libs is somehow needed on arm architecture
source=("$pkgname-$pkgver-ae1c768.tar.gz::https://github.com/mighty-p/t2scan/archive/ae1c768d8ff08400f8409e9e9338d375b78731c1.tar.gz")
sha256sums=('7a04aaabff34c83bac683e50e27494467ff1865829d2f95445a17228fe4b77c6')

build() {
  cd "${srcdir}/${pkgname}-ae1c768d8ff08400f8409e9e9338d375b78731c1"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-ae1c768d8ff08400f8409e9e9338d375b78731c1"
  make DESTDIR="$pkgdir" install
}
